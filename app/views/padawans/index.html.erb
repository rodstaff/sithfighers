<p id="notice"><%= notice %></p>

<h1>Listing Padawans</h1>

<table>
  <thead>
    <tr>
      <th>Padawan_id</th>
      <th>Padawan</th>
      <th>Jedis</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @padawans.each do |padawan| %>
      <tr>
        <td><%= padawan.id %></td>
        <th><%= padawan.name %></th>
        <td><% padawan.jedis.each do |jedi| %>
            <%= jedi.name %><br>
            <% end %></td>
        <td><%= link_to 'Show', padawan %></td>
        <td><%= link_to 'Edit', edit_padawan_path(padawan) %></td>
        <td><%= link_to 'Destroy', padawan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

